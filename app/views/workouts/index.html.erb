<div class="page-header">
  <%= link_to new_workout_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Workout
  <% end %>
  <h1>Listing workouts</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Workout name</th>
            <th>Body part hit</th>
            <th>Sets</th>
            <th>Reps</th>
            <th>Location</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @workouts) do |workout| %>
            <td><%= workout.workout_name %></td>
            <td><%= workout.body_part_hit %></td>
            <td><%= workout.sets %></td>
            <td><%= workout.reps %></td>
            <td><%= link_to 'Show', workout %></td>
        <td><%= link_to 'Edit', edit_workout_path(workout) %></td>
        <td><%= link_to 'Destroy', workout, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
