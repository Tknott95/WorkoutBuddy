<%= form_for(@workout, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @workout.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@workout.errors.count, "error") %> prohibited this workout from being saved:</h4>

      <ul>
      <% @workout.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :workout_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :workout_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :body_part_hit, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :body_part_hit, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :sets, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :sets, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :reps, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :reps, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
